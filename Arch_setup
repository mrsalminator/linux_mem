genfstab -U /mnt >> /mnt/etc/fstab

cat /mnt/etc/fstab


arch-chroot /mnt


ln -sf /usr/share/zoneinfo/Europe/Moscow /etc/localtime

hwclock --systohc


nano /etc/locale.gen

en_US.UTF8... (раскоментируем)

ru_RU.UTF8... (раскоментируем)

сохраняем выход

locale-gen

nano /etc/local.conf

LANG=ru_RU.UTF-8

nano /etc/vconsole.conf

